@model ClinicaVeterinaria.Models.Product

@{
    ViewBag.Title = "Dettagli Prodotto";
}

<h2>Dettagli Prodotto</h2>

<dl class="dl-horizontal">
    <dt>Armadietto</dt>
    <dd>@Html.DisplayFor(model => model.Drawer.Locker.Descrizione)</dd>

    <dt>Numero Cassetto</dt>
    <dd>@Html.DisplayFor(model => model.Drawer.DrawerID)</dd>

    <dt>Nome</dt>
    <dd>@Html.DisplayFor(model => model.Nome)</dd>

    <dt>Descrizione</dt>
    <dd>@Html.DisplayFor(model => model.Descrizione)</dd>
</dl>

<p>
    @Html.ActionLink("Aggiungi al resoconto", "Resoconto", new { id = Model.ProductID }, new { @class = "btn btn-success" })
    @Html.ActionLink("Torna alla lista", "Index", null, new { @class = "btn btn-info" })
</p>
