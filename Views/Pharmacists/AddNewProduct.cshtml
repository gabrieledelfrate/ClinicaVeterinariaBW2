@model ClinicaVeterinaria.Models.Product

@{
    ViewBag.Title = "Aggiungi Farmaco";
}

<h2>Aggiungi Farmaco</h2>

@using (Html.BeginForm("AddNewProduct", "Pharmacists", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                <div class="invalid-feedback">Il nome del farmaco è obbligatorio.</div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Prezzo, new { htmlAttributes = new { @class = "form-control", type = "number", step = "1.00", min = "1" } })
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.SupplierID, "Fornitore", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("SupplierID", null, "Seleziona un fornitore", new { @class = "form-control", required = "required" })
                <div class="invalid-feedback">Si prega di selezionare un fornitore.</div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DrawerID, "Cassetto", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("DrawerID", null, "Seleziona un cassetto", new { @class = "form-control", required = "required" })
                <div class="invalid-feedback">Si prega di selezionare un cassetto.</div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Aggiungi</button>
}
