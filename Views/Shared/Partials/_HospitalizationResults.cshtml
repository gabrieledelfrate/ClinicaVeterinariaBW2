@model List<ClinicaVeterinaria.Models.Hospitalization>

@if (Model != null && Model.Count > 0)
{
    <h3 class="text-success border-bottom border-success m-0 py-3">Risultati della ricerca:</h3>
    <table class="table my-4">
        <thead>
            <tr>
                <th>Data Inizio Ricovero</th>
                <th>Prognosi</th>
                <th>Costo Giornaliero Ricovero</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DataInizioRicovero.ToShortDateString()</td>
                    <td>@item.Prognosi</td>
                    <td>@item.CostoGiornalieroRicovero.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p style="font-size:3em">Nessun risultato trovato.</p>
}
