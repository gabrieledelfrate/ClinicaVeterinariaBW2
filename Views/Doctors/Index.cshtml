@model IEnumerable<ClinicaVeterinaria.Models.Beast>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    @*Codice Inzio Pes*@
    <div class="d-flex justify-content-between mb-3" style="width: 60%;margin: auto;">
        <h2>Lista Bestie</h2>
        <form method="get" action="@Url.Action("Index", "Doctors")" class="d-flex align-items-center" style="width:18rem">
            <div class="input-group">
                <input type="text" class="form-control" name="search" placeholder="Cerca per nome o microchip" value="@ViewBag.SearchString" />
                <button type="submit" class="btn btn-primary">Cerca</button>
            </div>
        </form>
        <a href="@Url.Action("AddBeast", "Doctors")" class="btn btn-success">Aggiungi</a>
    </div>
      <div class="row mb-2 fw-bold" style="width: 60%; margin: auto;">
        <div class="col-md-3">Foto bestia</div>
        <div class="col-md-6 ps-0">Nome bestia</div>
    </div>
    @*Codice Fine Pes*@
    <table class="table table-striped" style="width: 60%;margin: auto;">
        <tbody>
            @foreach (var beast in Model)
            {
                <tr>
                    <td>
                        <div class="row">
                            <div class="col-md-4">
                                <img src="@beast.Foto" alt="Foto" style="max-width: 100px; max-height: 100px;" />
                            </div>
                            <div class="col-md-6 ps-3">
                                <div class="d-flex align-items-center">
                                    <span>@beast.Nome</span>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td class="text-end">
                        <a href="@Url.Action("Details", "Doctors", new { id = beast.BeastID })" class="btn btn-info">Dettagli</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
