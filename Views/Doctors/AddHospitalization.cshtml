@model ClinicaVeterinaria.Models.Hospitalization

@using (Html.BeginForm("AddHospitalization", "Doctors", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.DataInizioRicovero, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.DataInizioRicovero, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
            @Html.ValidationMessageFor(model => model.DataInizioRicovero, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Prognosi)
        @Html.EditorFor(model => model.Prognosi, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Prognosi)
    </div>

    <div class="form-group">
        @Html.Label("Beast")
        @Html.DropDownList("BeastID", (SelectList)ViewBag.BeastList, "Select Beast", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Doctor")
        @Html.DropDownList("DoctorID", (SelectList)ViewBag.DoctorList, "Select Doctor", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CostoGiornalieroRicovero)
        @Html.TextBoxFor(model => model.CostoGiornalieroRicovero, "{0:n}", new { @class = "form-control", @type = "number", @step = "1.00" })
        @Html.ValidationMessageFor(model => model.CostoGiornalieroRicovero, "", new { @class = "text-danger" })
    </div>
     
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Ricovera Bestia</button>
    </div>
}
